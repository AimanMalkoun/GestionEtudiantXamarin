<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="145dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
 
        android:contentDescription="@string/home_icon"
        
        android:src="@drawable/home_icon" />
    <LinearLayout
        
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/backgroundyellow"
            android:textColor="@android:color/background_light"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:contextClickable="false"
            android:textAllCaps="false"
            android:text="@string/absence"
            android:id="@+id/absence" 
         />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="85dp"
        android:layout_height="66dp"
       
        android:contentDescription="@string/absence_icon"
      
        android:src="@drawable/checkbox_icon" />
    </LinearLayout>

<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_marginTop="5dp">
        <Button
            android:id="@+id/logout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/backgroundyellow"
            android:textColor="@android:color/background_light"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:contextClickable="false"
            
            android:textAllCaps="false"
            android:text="Déconnexion"

       />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="85dp"
        android:layout_height="66dp"
        
        android:contentDescription="@string/logout_icon"
        
        android:src="@drawable/logout_icon" />
         </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_marginTop="5dp">
        <Button
            
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/backgroundyellow"
            android:textColor="@android:color/background_light"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:contextClickable="false"
            android:textAllCaps="false"
            android:text="Chercher"
            android:id="@+id/search"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="85dp"
        android:layout_height="66dp"
        
        android:contentDescription="@string/search_icon"
        
        android:src="@drawable/loup_icon" />
         </LinearLayout>
<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
         android:layout_marginTop="5dp">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/backgroundyellow"
            android:textColor="@android:color/background_light"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:contextClickable="false"
            android:textAllCaps="false"
            android:text="Ajouter étudiant"
            android:id="@+id/addStudent"
     />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="85dp"
        android:layout_height="66dp"
        
        android:contentDescription="@string/db_icon"
        
        android:src="@drawable/database_icon" />
        </LinearLayout>



</LinearLayout>